@using BaseIdentity.PresentationLayer.Models

@model List<RoomType>

<section class="hp-room-section">
    <div class="container-fluid">
        <div class="hp-room-items">
            <div class="row">
                @foreach (var item in Model)
                {
                    <div class="col-lg-3 col-md-6">
                        <div class="hp-room-item set-bg" data-setbg="@item.ImageUrl">
                            <div class="hr-text">
                                <h3>@item.Name</h3>
                                <h2>@item.BasePrice$<span>/Pernight</span></h2>
                                <table>
                                    <tbody>
                                        <tr>
                                            <td class="r-o">Size:</td>
                                            <td>30 ft</td>
                                        </tr>
                                        <tr>
                                            <td class="r-o">Capacity:</td>
                                            <td>Max persion @item.Capacity</td>
                                        </tr>
                                        @*<tr>
                                            <td class="r-o">Bed:</td>
                                            <td>@item.</td>
                                        </tr>*@
                                        <tr>
                                            <td class="r-o">Services:</td>
                                            <td>@item.Description</td>
                                        </tr>
                                    </tbody>
                                </table>
                                <a href="/RoomType/FindRoom/@item.Id" class="primary-btn">More Details</a>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</section>