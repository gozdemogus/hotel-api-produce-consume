@model Review
<script src="//ajax.googleapis.com/ajax/libs/jquery/1.9.1/jquery.min.js"></script>


<div class="review-add">
    <h4>Add Review</h4>
    <form method="post" class="ra-form">
        <div class="row">
            <div class="col-lg-4">
                <input type="text" id="name" placeholder="Name*">
            </div>
            <div class="col-lg-4">
                <input type="text" id="email" placeholder="Email*">
            </div>
           
            <div class="col-lg-4">

                <select id="rating" name="rating">
                    <option value="Select">Your Rate</option>
                    <option value="1">1</option>
                    <option value="2">2</option>
                    <option value="3">3</option>
                    <option value="4">4</option>
                    <option value="5">5</option>
                </select>

            </div>

            <div class="col-lg-12">
                <textarea placeholder="Your Review" id="desc"></textarea>
                <button id="subButton" type="submit">Submit Now</button>
            </div>
        </div>
    </form>
</div>


<script>$(document).ready(function () {
        $('#subButton').click(function (e) {
            e.preventDefault();
            var name = $('#name').val();
            var email = $('#email').val();
            var desc = $('#desc').val();
            var roomId =@ViewBag.RoomID;
            var rate = $('#rating').val();

            $.ajax({
                url: '/Review/AddReview',
                type: 'POST',
                data: {
                    ReviewerName: name,
                    ReviewerEmail: email,
                    Description: desc,
                    RoomID: roomId,
                    Rating: rate
                },

                success: function (response) {
                    location.reload();
                },
                error: function (error) {

                }
            });
        });
    });</script>